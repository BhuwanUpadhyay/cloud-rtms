{
  "name": "web-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "format:fix": "pretty-quick --staged",
    "precommit": "run-s format:fix lint",
    "start": "ng serve --poll 2000 --port 4300 --proxy-config proxy.config.json",
    "start:prod": "npm run build && http-server -p 8080 -c-1 dist/web-ui",
    "build": "ng build --prod",
    "links": "ng build --project=@rtms/utils",
    "test": "jest ./src",
    "test:ci": "jest ./src --runInBand",
    "test:watch": "jest ./src --watch",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "pact:test": "jest ./pacts --config jest.pact.config.js",
    "pact:publish": "npm run pact:test && node pact.publish.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.7",
    "@angular/cdk": "^9.2.4",
    "@angular/common": "~9.1.7",
    "@angular/compiler": "~9.1.7",
    "@angular/core": "~9.1.7",
    "@angular/flex-layout": "^9.0.0-beta.31",
    "@angular/forms": "~9.1.7",
    "@angular/material": "^9.2.4",
    "@angular/platform-browser": "~9.1.7",
    "@angular/platform-browser-dynamic": "~9.1.7",
    "@angular/router": "~9.1.7",
    "@angular/service-worker": "~9.1.7",
    "keycloak-angular": "^7.3.1",
    "keycloak-js": "^10.0.2",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^9.0.1",
    "@angular-devkit/build-angular": "~0.901.6",
    "@angular-devkit/build-ng-packagr": "~0.901.6",
    "@angular/cli": "~9.1.6",
    "@angular/compiler-cli": "~9.1.7",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@pact-foundation/pact": "^9.11.0",
    "@pact-foundation/pact-node": "^10.9.4",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^5.1.2",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "jest-preset-angular": "^8.2.0",
    "ng-packagr": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupJest.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
